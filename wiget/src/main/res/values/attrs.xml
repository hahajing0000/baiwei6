<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--标题栏-->
    <declare-styleable name="TitleBar">
        <attr name="left_txt" format="string"></attr>
        <attr name="left_icon" format="reference"></attr>
        <attr name="left_iocn_visible" format="boolean"></attr>

        <attr name="title_txt" format="string"></attr>
        <attr name="title_txt_size" format="float"></attr>

        <attr name="right_txt" format="string"></attr>
        <attr name="right_icon" format="reference"></attr>
        <attr name="right_icon_visible" format="boolean"></attr>

        <attr name="icon_wh" format="integer"></attr>
    </declare-styleable>

    <!--进度条-->
    <declare-styleable name="FinalceProcessBar">
        <attr name="textColor" format="color"></attr>
        <attr name="textSize" format="dimension"></attr>

        <attr name="stork_width" format="dimension"></attr>
        <attr name="stork_color" format="color"></attr>

        <attr name="sweepangle" format="float"></attr>
        <attr name="txtcontent" format="string"></attr>
    </declare-styleable>

    <!--气泡-->
    <declare-styleable name="BubbleView">
        <attr name="backgroundColor" format="color"></attr>
        <attr name="storkWidth" format="dimension"></attr>
        <attr name="storkColor" format="color"></attr>
        <attr name="contentColor" format="color"></attr>
        <attr name="contentSize" format="dimension"></attr>
        <attr name="bubbleContent" format="string"></attr>
        <attr name="bubbleRadius" format="float"></attr>
    </declare-styleable>

    <!--自定义的进度条-->
    <declare-styleable name="CustomProcessBar">
        <attr name="cpb_backgound_color" format="color"></attr>
        <attr name="cpb_current_backgound_color" format="color"></attr>
        <attr name="cpb_txt_size" format="dimension"></attr>
        <attr name="cpb_txt_color" format="color"></attr>
        <!--当前进度-->
        <attr name="currentProcess" format="float"></attr>
    </declare-styleable>

    <!--自定义ET的属性-->
    <declare-styleable name="CustomEditText">
        <attr name="cet_maxlength" format="integer"></attr>
        <attr name="cet_txtsize" format="dimension"></attr>
    </declare-styleable>
</resources>